---
import Socials from "../components/Socials.astro";

const URL =
  "https://api.nasa.gov/techtransfer/patent/?engine&api_key=F7WtrS9t2B3a2hNWC3NuEGlCVM0goueOjBDt4VYM";

const response = await fetch(URL);

const data = await response.json();

const articles = data.results.slice(0, 10);
---

{
  articles.length != 0
    ? articles.map((article: string, index: string) => {
        return (
          <div class="flex flex-col items-center justify-center p-4 ">
            <Socials />
            <p class="font-semibold text-base tracking-wides uppercase pt-2 ">
              {article[3]}
            </p>
            <h4>{article[1]}</h4>
            <p>{article[6]}</p>

            <img
              class=" w-[300px] h-[220px] rounded-lg"
              src={article[10]}
              alt=""
            />
            <h5>{article[1]} </h5>
          </div>
        );
      })
    : "No hay datos disponibles ðŸ¦• "
}
