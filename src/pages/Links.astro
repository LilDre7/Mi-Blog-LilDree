---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/nav/Nav';
import redes from '../utils/redes';
import { fade } from 'astro:transitions';
---

<Layout title="Alvaro Aburto - Dev Web & Movil">
  <section class="dark:bg-[#FCFCFC] min-h-screen x">
    <div class="">
      <Nav client:only />
    </div>
    <div class="pt-[60px] pb-5">
      <img
        transition:animate="slide"
        class="rounded-full mx-auto h-[190px] w-[110px] object-cover"
        src="/images/imagePersonal/AlvaroHoddieWhite.png"
        alt="Alvaro Aburto"
      />
    </div>
    <div class="mx-10">
      <h1
        transition:animate={fade({ duration: '2s' })}
        class="font text-2xl tracking-tight antialiased text-[#EDEDEC] font-bold dark:text-[#1B1B18] text-center"
      >
        Alvaro Aburto
      </h1>
      <p
        transition:name="x"
        class="text-[#a1a09a] text-center font-medium tracking-tight dark:text-[#1B1B18]"
      >
        Software engineer who loves building cool things with code. In addition
        to coding, I also make YouTube videos. Find me elsewhere @diego__cb
      </p>
      <div transition:animate="slide" class="py-7">
        {
          redes.map((social) => (
            <section class="flex items-center justify-between bg-[#232323] rounded-[8px] mb-3">
              <a href={social.link} class="flex items-center p-4 gap-5">
                <img
                  class="w-6 h-6 filter invert dark:invert-0"
                  src={social.img}
                  alt=""
                />
                <h3 class="text-base font-medium">{social.titulo}</h3>
              </a>
              <a href={social.link} class="-translate-x-6">
                <img src={social.icon} alt="" />
              </a>
            </section>
          ))
        }
      </div>
    </div>
  </section>
</Layout>
