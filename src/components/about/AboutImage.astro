---
import { fade } from 'astro:transitions';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="About Image">
  <div class="relative mb-5 mx-auto mt-[54px]">
    <section transition:animate={fade({ duration: '2s' })} class="z flex gap-4 relative mx-auto">
      <div>
        <img
          class="w-96 h-64 sm:w-72 sm:h-48 relative inset-0 object-cover rounded-xl -rotate-6 sm:-rotate-8 overflow-hidden"
          src="/images/imagePersonal/AlvaroIA.webp"
          alt="me ai person"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div>
        <img
          class="w-48 h-64 absolute inset-0 object-cover bg-gray-400 shadow-md pointer-events-none rounded-2xl rotate-3 left-[45%] md:left-[20%] md:w-56 top-10 sm:-top-1 sm:w-44 md:h-56"
          src="/images/imagePersonal/AlvaroPandaCamu.webp"
          alt="me full style"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div>
        <img
          class="w-96 h-64 sm:w-72 sm:h-48 relative inset-0 object-cover rounded-xl -rotate-6 sm:-rotate-8 hidden md:block"
          src="/images/imagePersonal/circuitos.webp"
          alt="me ai person"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div>
        <img
          class="w-48 h-64 absolute inset-0 object-cover bg-gray-400 shadow-md pointer-events-none rounded-2xl rotate-3 left-[45%] md:left-[80%] md:w-56 top-10 sm:-top-1 sm:w-44 sm:h-56 hidden md:block"
          src="/images/imagePersonal/set-up.webp"
          alt="me full style"
          loading="lazy"
          decoding="async"
        />
      </div>
    </section>
  </div>
</Layout>