---
import Layout from '../../layouts/Layout.astro';
import redes from '../../utils/redes';
---

<Layout title="socials">
  <section
    class="flex-grow grid grid-cols-1 max-w-[700px] md:grid-cols-2 gap-2 mb-14"
  >
    {
      redes.map((social, index) => (
        <a
          href={social.link}
          class="flex items-center justify-between bg-[#232323 rounded-[8px] gap-3 cursor-pointer text-white font-semibold bg-gradient-to-r from-gray-800 to-black border border-gray-600 hover:scale-105 duration-200 hover:text-gray-500 hover:border-gray-800 hover:from-black hover:to-gray-900"
        >
          <div class="flex items-center p-4 gap-5">
            <img
              class="w-6 h-6 filter invert"
              src={social.img}
              alt=""
            />
            <h3 class="text-base font-medium">{social.titulo}</h3>
          </div>
          <div class="-translate-x-6">
            <img src={social.icon} alt="" />
          </div>
        </a>
      ))
    }
  </section>
</Layout>
