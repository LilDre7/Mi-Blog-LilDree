---
import Layout from '../../layouts/Layout.astro';
import articulos from '../../utils/articles.js';

const articulo = articulos.slice(0, 4);
---

<Layout>
  <section class="dark:bg-white h-screen w-[342px] mt-14">
    {
      articulo.map((article) => (
        <div class="flex justify-between items-center py-4 ">
          <div class="">
            <h6 class="text-[#A1A09A] font-medium">{article.fechaCreacion}</h6>
            <h3 class="text-[#EDEDEC] text-lg font-semibold pt-2">
              {article.titulo}
            </h3>
          </div>
          <div class="w-[96px] h-[96px] relative aspect-square">
            <img
              class="absolute w-full h-full object-cover rounded-xl "
              src={article.imagenURL}
              alt="imageArticle"
            />
          </div>
        </div>
      ))
    }
    <div class="mt-8">
      <a
        class="text-[#EDEDEC] border-solid border-white border-b-2 font-semibold text-base"
        href="#"
      >
        See All</a
      >
    </div>
  </section>
</Layout>
